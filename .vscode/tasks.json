{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure",
            "type": "shell",
            "group": "build",
            "command": "rm -rf build & mkdir build && mkdir build\\debug && mkdir build\\relwithdebinfo && mkdir build\\release && pushd build\\debug && cmake ..\\.. -G Ninja -DCMAKE_BUILD_TYPE=Debug && popd && pushd build\\relwithdebinfo && cmake ..\\.. -G Ninja -DCMAKE_BUILD_TYPE=RelWithDebInfo && popd && pushd build\\release && cmake ..\\.. -G Ninja -DCMAKE_BUILD_TYPE=Release && popd",
            "problemMatcher": []
        },
        {
            "label": "Debug",
            "type": "shell",
            "command": "cmake --build build/debug",
            "args": [],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Optimized",
            "type": "shell",
            "command": "cmake --build build/relwithdebinfo",
            "args": [],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Release",
            "type": "shell",
            "command": "cmake --build build/release",
            "args": [],
            "group": "build",
            "problemMatcher": "$msCompile"
        }
    ]
}